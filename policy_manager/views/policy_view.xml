<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_policy_form" model="ir.ui.view">
            <field name="name">policy.manager.form</field>
            <field name="model">policy.manager</field>
            <field name="arch" type="xml">
                <form string="Policy Manager">
                    <sheet>
                        <header>
                            <button name="action_view_policy" type="object" class="oe_highlight"
                                string="View Policy" />
                        </header>
                        <group>
                            <field name="company_name" />
                            <field name="company_website" />
                            <field name="address" />
                            <field name="city" />
                            <field name="state" />
                            <field name="country" />
                            <field name="zip_code" />
                            <field name="contact_details" />
                            <field name="email" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="policy_manager_action" model="ir.actions.act_window">
            <field name="name">Policy generater</field>
            <field name="res_model">policy.manager</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_policy_form" />
        </record>

        
    </data>
</odoo>